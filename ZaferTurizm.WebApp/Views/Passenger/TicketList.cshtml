@model IEnumerable<TicketSummary>

<h1>Araçlar</h1>

<div class="row">
    <div class="col-12">
        <div class="text-end mb-2">
           @* <a asp-controller="VehicleDefinition" asp-action="Create" class="btn btn-outline-primary btn-sm float-end mb-2">Yeni Ekle</a>*@
        </div>
        <table class="table table-striped table-bordered" id="myTable">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Yolcu Bilgileri</th>
                    <th>Sefer Bilgileri</th>
                    <th>Tarih</th>
                    <th>İşlemler</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.PassengerInfos</td>
                        <td>@item.BusTripName</td>
                        <td>@item.Date</td>
                        <td>
                            <a class="btn btn-warning" asp-route-id="@item.Id" asp-controller="Passenger" asp-action="TicketInfo">Bilete Git</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

